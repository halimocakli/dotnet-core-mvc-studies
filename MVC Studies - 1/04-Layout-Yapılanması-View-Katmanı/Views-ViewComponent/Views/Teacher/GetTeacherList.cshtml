@* Kart tasarımı için kullanılan yukarıdaki CSS linki, bu View içerisinde çağırılan tüm Partial View'lara ulaşır. *@

@{
    Layout = null;
}
@model List<Teacher>


<!-- GetTeacherList ekranında öğretmen kartının altında bir footer olacak, bu nedenle Layout'a True taşıyan ViewData kullanıyoruz. -->
@{
    ViewData["hasFooter"] = true;
}

<h2 style="text-align:center">HAFTALIK ÇALIŞMA ÇİZELGESİ</h2><br />

@await Component.InvokeAsync("WorkChart")

<h2 style="text-align:center">ÖĞRETMEN LİSTESİ</h2>

<div class="row row-cols-md-3">
    @foreach (Teacher item in Model)
    {
        <div class="col">
            <partial name="~/Views/Teacher/Partials/_TeacherInfoPartial.cshtml" model="@item" />
        </div>
    }
</div>
