@model List<BookType>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3 class="text-center">Kitap Tipi Listeleme Sayfası</h3>
<a asp-controller="BookType" asp-action="Create" class="btn btn-primary" style="float:right">Yeni Kitap Tipi Ekle</a>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Sıra</th>
            <th>İsim</th>
            <th>Aksiyonlar</th>
        </tr>
    </thead>
    <tbody>
        @for (int i = 0; i < Model.Count; i++)
        {
            <tr>
                <th>@i</th>
                <td>@Model[i].TypeName</td>
                <td>
                    <a class="big-icon" asp-controller="BookType" asp-action="Edit"><i class="bi bi-pencil-square"></i></a>
                    <a class="big-icon margin-icon" asp-controller="BookType" asp-action="Delete"><i class="bi bi-x-circle-fill"></i></a>
                </td>
            </tr>
        }
    </tbody>
</table>