@model Product

<div class="col-sm-12 col-md-4 col-lg-3 my-3">
    <div class="card" style="width: 18rem;">
        <img src="/images/default_placeholder.jpeg" class="card-img-top" alt="Product's Image">
        <div class="card-body">
            <h2 class="card-title">@Model.ProductName</h2>
            <p class="card-text">Product ID: @Model.ProductId <br /> Product Price: @Model.Price</p>
            <a class="btn btn-primary" asp-action="Get" asp-route-id="@Model.ProductId">
                <i class="fa-solid fa-arrow-right"></i>
                Get Product Details
            </a>
        </div>
    </div>
</div>