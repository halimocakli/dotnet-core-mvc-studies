@model Author

<h3 class="text-center">Yeni Yazar Ekleme Sayfası</h3>
<form method="post" asp-controller="Author" asp-action="Create" asp-area="Management">
    <div class="mb-3">
        <label class="form-label" asp-for="FirstName">İsim</label>
        <input type="text" class="form-control" asp-for="FirstName" />
    </div>
    <div class="mb-3">
        <label class="form-label" asp-for="LastName">Soyisim</label>
        <input type="text" class="form-control" asp-for="LastName" />
    </div>
    <button type="submit" class="btn btn-primary">Kaydet</button>
</form>
