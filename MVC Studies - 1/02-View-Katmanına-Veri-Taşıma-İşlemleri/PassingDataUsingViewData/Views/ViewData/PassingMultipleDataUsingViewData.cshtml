@using PassingDataUsingViewData.Models;
<h1>PassingDataUsingViewData ->> Views ->> ViewData ->> PassingMultipleDataUsingViewData ->> VIEW KATMANI GÖRÜNTÜLENİYOR</h1>
<h2>ViewData ile View katmanına çoklu veri taşıma işlemi.</h2>

<html>
<head>
    <title>Users List</title>
    <style>
        table {
            border-collapse: collapse;
            width: 100%;
        }

        td, th {
            border: 1px solid #DDDDDD;
            text-align: left;
            padding: 9px;
        }

        tr:nth-child(even) {
            background-color: #DDDDDD;
        }
    </style>
</head>
<body>
    <h2 style="text-align:center">Users List</h2>
    <table>
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>User Name</th>
        </tr>
        @* Bu noktada unboxing yapılıyor. *@
        @foreach (User item in ViewData["Users"] as List<User>)
        {
            <tr>
                <td>@item.FirstName</td>
                <td>@item.LastName</td>
                <td>@item.UserName</td>
            </tr>
        }
    </table>
</body>
</html>
