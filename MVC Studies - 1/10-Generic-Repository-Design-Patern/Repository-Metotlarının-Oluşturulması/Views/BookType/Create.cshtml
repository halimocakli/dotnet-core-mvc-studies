@model BookType
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3 class="text-center">Yeni Kitap Türü Ekleme Sayfası</h3>
<form method="post" asp-controller="BookType" asp-action="Create">
    <div class="mb-3">
        <label class="form-label" asp-for="TypeName">İsim</label>
        <input type="text" class="form-control" asp-for="TypeName" />
    </div>
    <button type="submit" class="btn btn-primary">Kaydet</button>
</form>
