@using Fluent_Validation.Dto;
@model List<BookDto>

<h3 class="text-center">Kitap Listeleme Sayfası</h3>
<a asp-controller="Book" asp-action="Create" asp-area="Management" class="btn btn-primary" style="float:right">Yeni Kitap Ekle</a>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Sıra Numarası</th>
            <th>ID Numarası</th>
            <th>İsim</th>
            <th>Yazar</th>
            <th>Kitap Türü</th>
            <th>Sayfa Sayısı</th>
            <th>Aksiyonlar</th>
        </tr>
    </thead>
    <tbody>
        @for (int i = 0; i < Model.Count; i++)
        {
            <tr>
                <th>@(i + 1)</th>
                <td>@Model[i].Id</td>
                <td>@Model[i].BookTitle</td>
                <td>@Model[i].AuthorFullName</td>
                <td>@Model[i].BookTypeName</td>
                <td>@Model[i].BookPageCount</td>
                <td>
                    <a class="big-icon" asp-controller="Book" asp-action="Edit" asp-area="Management" asp-route-id="@Model[i].Id"><i class="bi bi-pencil-square"></i></a>
                    <a class="big-icon margin-icon" asp-controller="Book" asp-action="Delete" asp-area="Management" asp-route-id="@Model[i].Id"><i class="bi bi-x-circle-fill"></i></a>
                </td>
            </tr>
        }
    </tbody>
</table>