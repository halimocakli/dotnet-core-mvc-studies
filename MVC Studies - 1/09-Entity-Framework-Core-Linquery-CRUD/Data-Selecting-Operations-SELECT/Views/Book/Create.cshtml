@using Data_Selecting_Operations_SELECT.Dto
@model (Book book, List<AuthorDto> authors, List<BookTypeDto> bookTypes)
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3 class="text-center">Yeni Kitap Ekleme Sayfası</h3>
<form method="post" asp-controller="Book" asp-action="Create">
    <div class="mb-3">
        <label class="form-label" asp-for="">Title</label>
        <input type="text" class="form-control" asp-for="Title" />
    </div>
    <div class="mb-3">
        <label class="form-label" asp-for="LastName">Soyisim</label>
        <input type="text" class="form-control" asp-for="LastName" />
    </div>
    <button type="submit" class="btn btn-primary">Kaydet</button>
</form>