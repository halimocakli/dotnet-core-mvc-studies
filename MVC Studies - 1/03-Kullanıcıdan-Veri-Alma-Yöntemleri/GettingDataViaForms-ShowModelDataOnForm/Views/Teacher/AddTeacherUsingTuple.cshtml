@using GettingDataViaForms_ShowModelDataOnForm.Models
@model (List<Branch> branches, Teacher teacher, Student student)

@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<h2>TUPLE NESNESİ KULLANARAK ÖĞRETMEN EKLEME SAYFASI</h2>

<form method="post" asp-controller="teacher" asp-action="addteacherusingtuple">
    <div>
        <label asp-for="teacher.FirstName">Name</label><br />
        <input type="text" asp-for="teacher.FirstName" />
    </div>
    <div>
        <label asp-for="teacher.LastName">Last Name</label><br />
        <input type="text" asp-for="teacher.LastName" />
    </div>
    <div>
        <label asp-for="teacher.BranchID">Branch</label><br />
        <select asp-for="teacher.BranchID" asp-items="@(new SelectList(Model.branches, "ID", "BranchName"))"></select>
    </div>
    <div>
        <label asp-for="student.FirstName">Öğrenci Adı</label><br />
        <input type="text" asp-for="student.FirstName" />
    </div>
    <div>
        <label asp-for="student.LastName">Öğrenci Soyadı</label><br />
        <input type="text" asp-for="student.LastName" />
    </div>
    <br />
    <br />
    <div>
        <button type="submit">ÖĞRETMEN EKLE</button>
    </div>
</form>